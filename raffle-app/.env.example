# ============================================
# RaffleApp Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED VARIABLES (Server won't start without these)
# ============================================

# Database connection string
# For PostgreSQL: postgresql://user:password@host:port/database
# For SQLite (development): sqlite:./raffle.db
DATABASE_URL=postgresql://user:password@localhost:5432/raffleapp

# Session encryption key (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# IMPORTANT: Must be at least 32 characters, keep secret, never commit to git
SESSION_SECRET=your_random_secret_here_at_least_32_characters_long

# ============================================
# OPTIONAL VARIABLES (Server will use defaults if not set)
# ============================================

# Node environment (development, production, test)
NODE_ENV=production

# Server port (default: 10000)
PORT=10000

# ============================================
# SECURITY
# ============================================

# Admin setup endpoint protection token (required to create admin user)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# If not set, /api/setup-admin endpoint will be disabled
ADMIN_SETUP_TOKEN=your_admin_setup_token_here

# CORS allowed origins (comma-separated URLs)
# Examples:
#   Production: https://yourapp.com,https://www.yourapp.com
#   Development: http://localhost:3000,http://localhost:5173
#   Disable CORS: (leave empty)
ALLOWED_ORIGINS=https://yourapp.onrender.com

# ============================================
# EMAIL CONFIGURATION (for notifications)
# ============================================

# SMTP server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Email credentials
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Email sender info
EMAIL_FROM=RaffleApp <noreply@yourapp.com>
SUPPORT_EMAIL=support@yourapp.com

# ============================================
# APPLICATION SETTINGS
# ============================================

# Enable debug logging
DEBUG_MODE=false

# Application URL (for QR codes and emails)
APP_URL=https://yourapp.onrender.com

# Session settings
SESSION_MAX_AGE=86400000
SESSION_COOKIE_SECURE=true

# File upload limits
MAX_FILE_SIZE=10485760

# ============================================
# RATE LIMITING
# ============================================

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# ============================================
# THIRD-PARTY SERVICES (Optional)
# ============================================

# Sentry error tracking
SENTRY_DSN=

# Analytics
GOOGLE_ANALYTICS_ID=
