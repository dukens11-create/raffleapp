# Server Configuration
NODE_ENV=production
PORT=3000

# Database
DB_PATH=./raffle.db

# Session Security
SESSION_SECRET=your-secure-random-secret-here-change-this

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Application URL (for email notifications)
APP_URL=http://localhost:3000

# Email Configuration (for seller notifications)
# For Gmail: Use an App Password (not your regular password)
# 1. Go to Google Account â†’ Security
# 2. Enable 2-Step Verification
# 3. Generate App Password
# 4. Use that password in EMAIL_PASSWORD
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=RaffleApp <your-email@gmail.com>

# Optional: File Upload Directory
UPLOAD_DIR=uploads/

# Optional: Stripe Integration (if needed)
STRIPE_SECRET_KEY=sk_test_yourkey

# Debug Mode - Set to 'true' for detailed logging
DEBUG_MODE=false

# Optional: Admin Setup Key - Add secret key for /api/setup-admin endpoint security
# ADMIN_SETUP_KEY=your-secret-setup-key
