# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# For development (SQLite): Leave DATABASE_URL empty or comment it out
# For production (PostgreSQL): Set DATABASE_URL from Render PostgreSQL
# DATABASE_URL=

# Legacy SQLite path (used when DATABASE_URL is not set)
DB_PATH=./raffle.db

# Session Security
SESSION_SECRET=your_super_secret_session_key_for_testing_only

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Application URL (for email notifications)
APP_URL=http://localhost:5000

# Email Configuration (optional for testing)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-specific-password
# EMAIL_FROM=RaffleApp <your-email@gmail.com>

# File Upload Directory
UPLOAD_DIR=uploads/

# Optional: Stripe Integration (if needed)
STRIPE_SECRET_KEY=sk_test_yourkey

# Debug Mode - Set to 'true' for detailed logging
DEBUG_MODE=true

# Admin Setup Token - Required for security
ADMIN_SETUP_TOKEN=test-admin-setup-token-123456
